<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nachricht bearbeiten</title>
    <link href="https://stackpath.amazonaws.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Nachricht bearbeiten</h2>
        <form action="/message/<%= message.id %>/update" method="post">
            <div class="form-group">
                <label for="sender">Sender:</label>
                <select name="sender" id="sender" class="form-control" required>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>" <%= message.sender === user.id ? 'selected' : '' %>><%= user.vorname %> <%= user.nachname %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="receiver">Empf√§nger:</label>
                <select name="receiver" id="receiver" class="form-control" required>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>" <%= message.receiver === user.id ? 'selected' : '' %>><%= user.vorname %> <%= user.nachname %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="content">Nachricht:</label>
                <textarea name="content" id="content" class="form-control" required><%= message.content %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Aktualisieren</button>
        </form>
    </div>
</body>
</html>