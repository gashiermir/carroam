<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Angebote</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            margin-bottom: 20px;
        }
        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .card-body {
            padding: 15px;
        }
        .card-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            font-size: 1.25rem;
        }
        .card-text {
            margin-bottom: 10px;
        }
        .card-footer {
            background-color: #f8f9fa;
            border-top: 0;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center mb-4" style="background-color: transparent;">Angebote</h2>

        <div class="row">
            <% angebote.forEach(function(angebot) { %>
            <div class="col-md-4">
                <div class="card">
                    <% if (angebot.bildUrl) { %>
                        <img src="<%= angebot.bildUrl %>" alt="Bild von <%= angebot.beschreibung %>" class="card-img-top">
                    <% } else { %>
                        <img src="https://via.placeholder.com/350x200" alt="Kein Bild verfügbar" class="card-img-top">
                    <% } %>
                    <div class="card-body">
                        <div class="card-title">
                            <span><%= angebot.modelle ? angebot.modelle.name : 'Modell nicht angegeben' %></span>
                            <span><%= angebot.preis %> €</span>
                        </div>
                        <p class="card-text"><strong>PS:</strong> <%= angebot.ps %></p>
                        <p class="card-text"><strong>Getriebe:</strong> <%= angebot.getriebe %></p>
                        <p class="card-text"><strong>Standort:</strong> <%= angebot.standort %></p>
                        <p class="card-text"><strong>Verfügbarkeit:</strong> <%= new Date(angebot.verfügbarkeitVon).toLocaleDateString('de-DE') %> - <%= new Date(angebot.verfügbarkeitBis).toLocaleDateString('de-DE') %></p>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-primary btn-sm" href="/angebot/<%= angebot.id %>">Anzeigen</a>
                        <a class="btn btn-primary btn-sm" href="/angebot/<%= angebot.id %>/edit">Ändern</a>
                        <form action="/angebot/<%= angebot.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Löschen</button>
                        </form>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <div class="text-center mt-4">
            <a class="btn btn-secondary mt-3" href="/angebot/new">Neues Angebot hinzufügen</a>
            <a href="/dashboard" class="btn btn-primary mt-3">Zum Dashboard</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.amazonaws.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
