<!DOCTYPE html>
<html>
<head>
  <title>Angebot bearbeiten</title>
</head>
<body>
  <h1>Angebot bearbeiten</h1>
  <form action="/angebot/<%= angebot.id %>/update" method="POST">
    <label for="ps">PS:</label>
    <input type="number" name="ps" id="ps" value="<%= angebot.ps %>" required>
    <br>
    <label for="getriebe">Getriebe:</label>
    <select name="getriebe" id="getriebe">
      <option value="Automatik" <%= angebot.getriebe === 'Automatik' ? 'selected' : '' %>>Automatik</option>
      <option value="Manuell" <%= angebot.getriebe === 'Manuell' ? 'selected' : '' %>>Manuell</option>
    </select>
    <br>
    <label for="preis">Preis:</label>
    <input type="text" name="preis" id="preis" value="<%= angebot.preis %>" required>
    <br>
    <label for="beschreibung">Beschreibung:</label>
    <textarea name="beschreibung" id="beschreibung" required><%= angebot.beschreibung %></textarea>
    <br>
    <label for="standort">Standort:</label>
    <input type="text" name="standort" id="standort" value="<%= angebot.standort %>" required>
    <br>
    <label for="verfügbarkeitVon">Verfügbarkeit von:</label>
    <input type="date" name="verfügbarkeitVon" id="verfügbarkeitVon" value="<%= angebot.verfügbarkeitVon.toISOString().split('T')[0] %>" required>
    <br>
    <label for="verfügbarkeitBis">Verfügbarkeit bis:</label>
    <input type="date" name="verfügbarkeitBis" id="verfügbarkeitBis" value="<%= angebot.verfügbarkeitBis.toISOString().split('T')[0] %>" required>
    <br>
    <label for="modelle">Modell:</label>
    <select name="modelle" id="modelle">
      <% modelle.forEach(function(modell) { %>
        <option value="<%= modell.id %>" <%= angebot.modelle === modell.id ? 'selected' : '' %>><%= modell.name %></option>
      <% }); %>
    </select>
    <br>
    <label for="vermieter">Vermieter:</label>
    <select name="vermieter" id="vermieter">
      <% vermieter.forEach(function(user) { %>
        <option value="<%= user.id %>" <%= angebot.vermieter === user.id ? 'selected' : '' %>><%= user.vorname %> <%= user.nachname %></option>
      <% }); %>
    </select>
    <br>
    <button type="submit">Speichern</button>
  </form>
  <a href="/angebot">Zurück zur Liste</a>
</body>
</html>

