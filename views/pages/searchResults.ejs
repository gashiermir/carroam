<!-- views/pages/searchResults.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Suchergebnisse</title>
  <link rel="stylesheet" href="/styles/main.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <header>
    <h1>Suchergebnisse</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <% if (autos.length > 0) { %>
      <ul>
        <% autos.forEach(function(auto) { %>
          <li>
            <h2><%= auto.beschreibung %></h2>
            <p>PS: <%= auto.ps %></p>
            <p>Getriebeart: <%= auto.getriebeart %></p>
            <p>Preis: <%= auto.preis %> €</p>
            <p>Verfügbarkeit: von <%= auto.verfügbarkeitVon.toDateString() %> bis <%= auto.verfügbarkeitBis.toDateString() %></p>
            <a href="/auto/<%= auto.id %>" class="btn btn-primary">Ansehen</a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>Keine Autos gefunden.</p>
    <% } %>
  </main>
  <footer>
    <p>&copy; 2023 Your Company</p>
  </footer>
  <style>
    /* Responsives Design */
    body {
      font-family: Arial, sans-serif;
    }
    header {
      background-color: #333;
      color: white;
      padding: 1rem;
    }
    nav ul {
      list-style: none;
      padding: 0;
    }
    nav ul li {
      display: inline;
      margin-right: 1rem;
    }
    nav ul li a {
      color: white;
      text-decoration: none;
    }
    main {
      padding: 1rem;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    ul li {
      border: 1px solid #ccc;
      margin-bottom: 1rem;
      padding: 1rem;
    }
    .btn {
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: #007BFF;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
    .btn:hover {
      background-color: #0056b3;
    }
    @media (max-width: 600px) {
      nav ul li {
        display: block;
        margin: 0.5rem 0;
      }
      ul li {
        padding: 0.5rem;
      }
    }
  </style>
</body>
</html>
