<!-- views/pages/auto/edit.ejs -->
<div>
    <h2>Edit Auto</h2>
    <form action="/auto/<%= auto.id %>?_method=PATCH" method="POST">
        <label for="ps">PS:</label>
        <input type="number" id="ps" name="ps" value="<%= auto.ps %>" required>
        
        <label for="getriebeart">Getriebeart:</label>
        <input type="text" id="getriebeart" name="getriebeart" value="<%= auto.getriebeart %>" required>
        
        <label for="preis">Preis:</label>
        <input type="text" id="preis" name="preis" value="<%= auto.preis %>" required>

        <label for="standort">Standort:</label>
        <input type="text" id="standort" name="standort"  value="<%= auto.standort %>" required>
        
        <label for="beschreibung">Beschreibung:</label>
        <textarea id="beschreibung" name="beschreibung" required><%= auto.beschreibung %></textarea>
        
        <button type="submit">Update</button>
    </form>
</div>