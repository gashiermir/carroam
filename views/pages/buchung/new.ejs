<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neue Buchung erstellen</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
    <style>
        body {
            background-color: #FFFFFF;
        }
        .btn-custom {
            background-color: #6D8672;
            color: #FFFFFF;
        }
        .btn-custom:hover {
            background-color: #316B5F;
            color: #FFFFFF;
        }
        .card-header-custom {
            background-color: #ffffff; /* Hellbeige */
            color: #316B5F; /* Dunkelgrün für Text */
        }
        .card-footer-custom {
            background-color: #ffffff; /* Hellbeige */
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-header card-header-custom">
                <h2>Neue Buchung erstellen</h2>
            </div>
            <div class="card-body">
                <form action="/buchung/create" method="POST">
                    <div class="form-group">
                        <label for="preis">Preis:</label>
                        <input type="number" class="form-control" id="preis" name="preis" required>
                    </div>
                    <div class="form-group">
                        <label for="status">Status:</label>
                        <select class="form-control" id="status" name="status">
                            <option value="offen">Offen</option>
                            <option value="bezahlt">Bezahlt</option>
                            <option value="storniert">Storniert</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="buchungsdatum">Buchungsdatum:</label>
                        <input type="date" class="form-control" id="buchungsdatum" name="buchungsdatum" required>
                    </div>
                    <div class="form-group">
                        <label for="buchungVon">Buchung von:</label>
                        <input type="date" class="form-control" id="buchungVon" name="buchungVon" required>
                    </div>
                    <div class="form-group">
                        <label for="buchungBis">Buchung bis:</label>
                        <input type="date" class="form-control" id="buchungBis" name="buchungBis" required>
                    </div>
                    <div class="form-group">
                        <label for="mieter">Mieter:</label>
                        <select class="form-control" id="mieter" name="mieter">
                            <% mieter.forEach(function(user) { %>
                                <option value="<%= user.id %>"><%= user.vorname %> <%= user.nachname %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="angebote">Angebot:</label>
                        <select class="form-control" id="angebote" name="angebote">
                            <% angebote.forEach(function(angebot) { %>
                                <option value="<%= angebot.id %>"><%= angebot.beschreibung %></option>
                            <% }); %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary mt-3">Erstellen</button>
                    <a href="/buchung" class="btn btn-primary mt-3">Zurück zur Liste</a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.amazonaws.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
