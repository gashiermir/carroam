<!-- views/pages/buchung/new.ejs -->
<div>
    <h2>Create New Booking</h2>
    <form action="/buchung" method="POST">
      <label for="auto">Auto:</label>
      <select id="auto" name="auto" required>
        <% autos.forEach(function(auto) { %>
        <option value="<%= auto.id %>"><%= auto.beschreibung %> (Preis: <%= auto.preis %>â‚¬)</option>
        <% }); %>
      </select>
  
      <label for="mieter">Mieter:</label>
      <select id="mieter" name="mieter" required>
        <% mieter.forEach(function(user) { %>
        <option value="<%= user.id %>"><%= user.vorname %> <%= user.nachname %></option>
        <% }); %>
      </select>
  
      <label for="buchungsdatum">Buchungsdatum:</label>
      <input type="date" id="buchungsdatum" name="buchungsdatum" required>
  
      <label for="buchungVon">Buchung Von:</label>
      <input type="date" id="buchungVon" name="buchungVon" required>
  
      <label for="buchungBis">Buchung Bis:</label>
      <input type="date" id="buchungBis" name="buchungBis" required>
  
      <label for="preis">Preis:</label>
      <input type="number" id="preis" name="preis" required>
  
      <button type="submit">Submit</button>
    </form>
  </div>
  