<!DOCTYPE html>
<html>
<head>
  <title>Buchung bearbeiten</title>
</head>
<body>
  <h1>Buchung bearbeiten</h1>
  <form action="/buchung/<%= buchung.id %>/update" method="POST">
    <label for="preis">Preis:</label>
    <input type="number" name="preis" id="preis" value="<%= buchung.preis %>" required>
    <br>
    <label for="status">Status:</label>
    <select name="status" id="status">
      <option value="offen" <%= buchung.status === 'offen' ? 'selected' : '' %>>Offen</option>
      <option value="bezahlt" <%= buchung.status === 'bezahlt' ? 'selected' : '' %>>Bezahlt</option>
      <option value="storniert" <%= buchung.status === 'storniert' ? 'selected' : '' %>>Storniert</option>
    </select>
    <br>
    <label for="buchungsdatum">Buchungsdatum:</label>
    <input type="date" name="buchungsdatum" id="buchungsdatum" value="<%= buchung.buchungsdatum.toISOString().split('T')[0] %>" required>
    <br>
    <label for="buchungVon">Buchung von:</label>
    <input type="date" name="buchungVon" id="buchungVon" value="<%= buchung.buchungVon.toISOString().split('T')[0] %>" required>
    <br>
    <label for="buchungBis">Buchung bis:</label>
    <input type="date" name="buchungBis" id="buchungBis" value="<%= buchung.buchungBis.toISOString().split('T')[0] %>" required>
    <br>
    <label for="mieter">Mieter:</label>
    <select name="mieter" id="mieter">
      <% mieter.forEach(function(user) { %>
        <option value="<%= user.id %>" <%= buchung.mieter === user.id ? 'selected' : '' %>><%= user.vorname %> <%= user.nachname %></option>
      <% }); %>
    </select>
    <br>
    <label for="angebote">Angebot:</label>
    <select name="angebote" id="angebote">
      <% angebote.forEach(function(angebot) { %>
        <option value="<%= angebot.id %>" <%= buchung.angebote === angebot.id ? 'selected' : '' %>><%= angebot.beschreibung %></option>
      <% }); %>
    </select>
    <br>
    <button type="submit">Speichern</button>
  </form>
  <a href="/buchung">Zur√ºck zur Liste</a>
</body>
</html>
