<!DOCTYPE html>
<html>
<head>
  <title>Neues Modell erstellen</title>
</head>
<body>
  <h1>Neues Modell erstellen</h1>
  <form action="/modell/create" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required>
    <br>
    <label for="baujahr">Baujahr:</label>
    <input type="number" name="baujahr" id="baujahr" required>
    <br>
    <label for="beschreibung">Beschreibung:</label>
    <textarea name="beschreibung" id="beschreibung"></textarea>
    <br>
    <label for="sitzplaetze">Sitzplätze:</label>
    <input type="number" name="sitzplaetze" id="sitzplaetze">
    <br>
    <label for="marke">Marke:</label>
    <select name="marke" id="marke">
      <% marken.forEach(function(marke) { %>
        <option value="<%= marke.id %>"><%= marke.bezeichnung %></option>
      <% }); %>
    </select>
    <br>
    <button type="submit">Erstellen</button>
  </form>
  <a href="/modell">Zurück zur Liste</a>
</body>
</html>
