<!DOCTYPE html>
<html>
<head>
  <title>Modell bearbeiten</title>
</head>
<body>
  <h1>Modell bearbeiten</h1>
  <form action="/modell/<%= modell.id %>/update" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= modell.name %>" required>
    <br>
    <label for="baujahr">Baujahr:</label>
    <input type="number" name="baujahr" id="baujahr" value="<%= modell.baujahr %>" required>
    <br>
    <label for="beschreibung">Beschreibung:</label>
    <textarea name="beschreibung" id="beschreibung"><%= modell.beschreibung %></textarea>
    <br>
    <label for="sitzplaetze">Sitzplätze:</label>
    <input type="number" name="sitzplaetze" id="sitzplaetze" value="<%= modell.sitzplaetze %>">
    <br>
    <label for="marke">Marke:</label>
    <select name="marke" id="marke">
      <% marken.forEach(function(marke) { %>
        <option value="<%= marke.id %>" <%= modell.marke && modell.marke.id === marke.id ? 'selected' : '' %>><%= marke.bezeichnung %></option>
      <% }); %>
    </select>
    <br>
    <button type="submit">Speichern</button>
  </form>
  <a href="/modell">Zurück zur Liste</a>
</body>
</html>
