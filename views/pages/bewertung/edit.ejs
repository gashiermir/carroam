<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bewertung bearbeiten</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
    <style>
        body {
            background-color: #FFFFFF;
        }
        .btn-custom {
            background-color: #6D8672;
            color: #FFFFFF;
        }
        .btn-custom:hover {
            background-color: #316B5F;
            color: #FFFFFF;
        }
    </style>
</head>
<body>
    <h2>Bewertung bearbeiten</h2>
    <div class="container my-5">
        <div class="card-body">
            <form action="/bewertung/<%= bewertung.id %>/update" method="POST">
                <div class="form-group">
                    <label for="sterne">Sterne:</label>
                    <input type="number" class="form-control" id="sterne" name="sterne" value="<%= bewertung.sterne %>" min="1" max="5" required>
                </div>
                <div class="form-group">
                    <label for="kommentar">Kommentar:</label>
                    <textarea class="form-control" id="kommentar" name="kommentar" required><%= bewertung.kommentar %></textarea>
                </div>
                <div class="form-group">
                    <label for="benutzer">Benutzer:</label>
                    <select class="form-control" id="benutzer" name="benutzer" required>
                        <% benutzer.forEach(function(user) { %>
                        <option value="<%= user.id %>" <%= bewertung.benutzer.id === user.id ? 'selected' : '' %>><%= user.vorname %> <%= user.nachname %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="angebote">Angebot:</label>
                    <select class="form-control" id="angebote" name="angebote" required>
                        <% angebote.forEach(function(angebot) { %>
                        <option value="<%= angebot.id %>" <%= bewertung.angebote.id === angebot.id ? 'selected' : '' %>><%= angebot.beschreibung %></option>
                        <% }); %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Speichern</button>
                <a href="/bewertung" class="btn btn-secondary mt-3">Zur√ºck zur Liste</a>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.amazonaws.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

