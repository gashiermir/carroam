<!DOCTYPE html>
<html>
<head>
  <title>Bewertung bearbeiten</title>
</head>
<body>
  <h1>Bewertung bearbeiten</h1>
  <form action="/bewertung/<%= bewertung.id %>/update" method="POST">
    <label for="sterne">Sterne:</label>
    <input type="number" name="sterne" id="sterne" value="<%= bewertung.sterne %>" min="1" max="5" required>
    <br>
    <label for="kommentar">Kommentar:</label>
    <textarea name="kommentar" id="kommentar"><%= bewertung.kommentar %></textarea>
    <br>
    <label for="benutzer">Benutzer:</label>
    <select name="benutzer" id="benutzer">
      <% benutzer.forEach(function(user) { %>
        <option value="<%= user.id %>" <%= bewertung.benutzer === user.id ? 'selected' : '' %>><%= user.vorname %> <%= user.nachname %></option>
      <% }); %>
    </select>
    <br>
    <label for="angebote">Angebot:</label>
    <select name="angebote" id="angebote">
      <% angebote.forEach(function(angebot) { %>
        <option value="<%= angebot.id %>" <%= bewertung.angebote === angebot.id ? 'selected' : '' %>><%= angebot.beschreibung %></option>
      <% }); %>
    </select>
    <br>
    <button type="submit">Speichern</button>
  </form>
  <a href="/bewertung">ZurÃ¼ck zur Liste</a>
</body>
</html>
