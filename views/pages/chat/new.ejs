<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neue Chat-Nachricht</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Neue Chat-Nachricht</h2>
        <form action="/chat" method="POST">
            <input type="hidden" name="angebot" value="<%= angebot.id %>">
            <div class="form-group">
                <label for="sender">Absender</label>
                <select class="form-control" id="sender" name="sender" required>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>"><%= user.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="receiver">Empf√§nger</label>
                <select class="form-control" id="receiver" name="receiver" required>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>"><%= user.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="message">Nachricht</label>
                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Absenden</button>
        </form>
    </div>
</body>
</html>
