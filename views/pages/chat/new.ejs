<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neuer Chat</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Neuer Chat</h2>
        <form action="/chat/create" method="POST">
            <div class="form-group">
                <label for="participants">Teilnehmer:</label>
                <select id="participants" name="participants[]" class="form-control" multiple required>
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>"><%= user.vorname %> <%= user.nachname %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="content">Erste Nachricht:</label>
                <textarea id="content" name="content" class="form-control" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Erstellen</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>