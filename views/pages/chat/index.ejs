<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chats</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Chats</h2>
    <ul class="list-group">
      <% chats.forEach(chat => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="/chat/<%= chat.id %>">
            Chat zwischen <% chat.participants.forEach((participant, index) => { %>
              <%= participant.vorname %> <%= participant.nachname %><%= index < chat.participants.length - 1 ? ', ' : '' %>
            <% }); %>
          </a>
          <form action="/chat/<%= chat.id %>/delete" method="POST" class="ml-auto">
            <button type="submit" class="btn btn-danger btn-sm">LÃ¶schen</button>
          </form>
        </li>
      <% }); %>
    </ul>
    <a href="/chat/new" class="btn btn-primary mt-3">Neuer Chat</a>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>